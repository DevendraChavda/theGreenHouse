---
import Picture from 'astro/components/Picture.astro';
import '../style/moreHouse.css';

const houseDetails = [
	{
		src: 'https://img.freepik.com/free-vector/social-media-post-template-real-estate-apartment-promotion_8830-534.jpg?size=338&ext=jpg&ga=GA1.1.2008272138.1724112000&semt=ais_hybrid',
		city: '',
	},
	{
		src: 'https://img.freepik.com/free-vector/social-media-post-template-real-estate-apartment-promotion_8830-534.jpg?size=338&ext=jpg&ga=GA1.1.2008272138.1724112000&semt=ais_hybrid',
		city: '',
	},
	{
		src: 'https://img.freepik.com/free-vector/social-media-post-template-real-estate-apartment-promotion_8830-534.jpg?size=338&ext=jpg&ga=GA1.1.2008272138.1724112000&semt=ais_hybrid',
		city: '',
	},
];
---

<div class="relative lg:p-5 lg:mt-10 mt-10">
	<!-- Top-right small "View More" button -->

	<div class="container">
		<h1 class="text-2xl">More House Details</h1>
		<a href="#" class="view-more">View More</a>
	</div>

	<div class="houseContainer">
		{
			houseDetails.map((data) => (
				<div class="housePicture">
					<Picture
						src={data.src}
						alt={'house'}
						sizes="(max-width: 800px) 100vw, 400px"
						width={400}
						height={400}
						class="picture"
					/>
				</div>
			))
		}
	</div>
</div>
